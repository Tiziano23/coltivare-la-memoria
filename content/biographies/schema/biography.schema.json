{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://master-hosing.ddns.net/giardino-dei-giusti/content/biographies/biography.schema.json",
    "type": "object",

    "properties": {
        "person": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "surname": { "type": "string" },
                "sex": { "type": "string" },
                "birthday": { "type": "string" },
                "deathdate": { "type": "string" },
                "birthplace": { "type": "string" },
                "occupation": { "type": "string" },
                "recognition_date": { "type": "string" }
            },
            "required": ["name", "surname", "sex", "birthday", "deathdate", "birthplace", "occupation"]
        },
        "story": {
            "type": "object",
            "properties": {
                "content": { "type": "string" },
                "location": { "type": "string" },
                "optional": {
                    "type": "object",
                    "properties": {
                        "documents": {
                            "type": "array"
                        }
                    }
                }
            },
            "required": ["content", "location"]
        },
        "meta": {
            "type": "object",
            "properties": {
                "date": { "type": "string" },
                "authors": { "type": "array" },
                "sources": { "type": "array" }
            }
        }
    },

    "required": ["person", "story", "meta"]
}
